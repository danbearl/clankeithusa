!!! 5
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Clan Keith USA"
    %meta{:content => "The official Web site for Clan Keith USA", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    = yield(:head)

  %body
    .container
      .row
        .span12.banner
      .row
        .navbar.nav-fixed-top
          .navbar-inner
            .container
              %ul.nav
                - pages.each do |p|
                  %li.dropdown
                    %a(href="#" class="dropdown-toggle" data-toggle="dropdown")= p.name
                    %ul.dropdown-menu
                      %li= link_to(p.name, slug_path(p.slug))
                      - p.sub_pages.each do |page|
                        %li= link_to(page.name, slug_path(page.slug))
      .row
        .span9
          = yield
        .span3
          %p Sidebar Stuff
      .footer
          
