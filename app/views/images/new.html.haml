%h1 New image

= form_for image, url: { action: "create" }, html: { multipart: true }  do |f|
  - if image.errors.any?
    #error_explanation
      %h2= "#{pluralize(image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - image.errors.full_messages.each do |msg|
          %li= msg
  = hidden_field_tag :page_id, value: params[:page_id]

  .control-group
    = f.label :name
    .controls
      = f.text_field :name

  .control-group
    = f.label :priority
    .controls
      = f.number_field :priority

  .control-group
    = f.label :description
    .controls
      = f.text_area :description

  .control-group
    = f.file_field :picture

  .control-group
    = f.label :featured
    .controls
      = f.check_box :featured

  .form-actions
    = f.submit 'Save'

= link_to 'Back', images_path
