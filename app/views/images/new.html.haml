%h1 New image

= form_for image, url: { action: "create" }, html: { multipart: true }  do |f|
  - if image.errors.any?
    #error_explanation
      %h2= "#{pluralize(image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - image.errors.full_messages.each do |msg|
          %li= msg
  = hidden_field_tag :page_id, value: params[:page_id]

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :priority
    = f.number_field :priority
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.file_field :picture
  .actions
    = f.submit 'Save'

= link_to 'Back', images_path
