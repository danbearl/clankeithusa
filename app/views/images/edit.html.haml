%h1 Editing image

= form_for image, url: { action: "create" }, html: { multipart: true }  do |f|
  - if image.errors.any?
    #error_explanation
      %h2= "#{pluralize(image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - image.errors.full_messages.each do |msg|
          %li= msg
  = hidden_field_tag :imageable_id, value: params[:imageable_id]
  = hidden_field_tag :imageable_type, value: params[:imageable_type]

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :picture
    = f.text_field :picture
  .field
    = f.label :priority
    = f.number_field :priority
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.file_field :picture
  .field
    = f.label :imageable_id
    - @select_options = Page.all.map {|page| [page.name, page.id] }
    = f.select(:imageable_id, options_for_select(@select_options, image.imageable_id))
    
  .actions
    = f.submit 'Save'
= link_to 'Show', @image
\|
= link_to 'Back', images_path
