%h1 Editing image

= form_for image, html: { multipart: true }  do |f|
  - if image.errors.any?
    #error_explanation
      %h2= "#{pluralize(image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - image.errors.full_messages.each do |msg|
          %li= msg

  .control-group
    = f.label :name
    .controls
      = f.text_field :name

  .control-group
    = f.label :picture
    .controls
      = f.text_field :picture

  .control-group
    = f.label :priority
    .controls
      = f.number_field :priority
      
  .control-group
    = f.label :description
    .controls
      = f.text_area :description

  .control-group
    = f.label :featured
    .controls
      = f.check_box :featured
  
  .control-group
    = f.file_field :picture

  .control-group
    = f.label 'Parent Page', :page_id
    .controls
      - @select_options = []
      - @select_options << ["None", 0]
      - @select_options.concat Page.all.map {|page| [page.name, page.id] }
      = f.select(:page_id, options_for_select(@select_options, image.page_id))
    
  .form-actions
    = f.submit 'Save'
= link_to 'Show', @image
\|
= link_to 'Back', images_path
