= form_for @image do |f|
  - if @image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - @image.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :picture
    = f.text_field :picture
  .field
    = f.label :imageable_id
    = f.number_field :imageable_id
  .field
    = f.label :imageable_type
    = f.text_field :imageable_type
  .field
    = f.label :priority
    = f.number_field :priority
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
