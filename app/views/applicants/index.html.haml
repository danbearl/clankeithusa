- model_class = Applicant
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th Name
      %th Submitted
      %th Type
      %th Processed?
      %th Approved?
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - applicants.each do |applicant|
      %tr
        %td= link_to applicant.id, applicant
        %td= link_to applicant.applicant_first_name + " " + applicant.applicant_last_name, applicant
        %td= applicant.created_at.to_formatted_s(:us)
        %td= applicant.membership_type
        %td= applicant.processed
        %td= applicant.approved
        %td
          = link_to t('.destroy', :default => t("helpers.links.destroy")), applicant, :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
