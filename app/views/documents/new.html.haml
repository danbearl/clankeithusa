.row
  .offset3.span6.text-center
    %h1 New Document

.row
  .offset3.span6
    = form_for document, url: { action: "create" }, html: {multipart: true } do |f|
      - if document.errors.any?
        #error_explanation
          %h2= "#{pluralize(document.errors.count, "error")} prohibited this document from being saved:"
          %ul
            - document.errors.full_messages.each do |msg|
              %li= msg
      = f.hidden_field :page_id, value: params[:page_id]
      
      = render partial: "form", locals: { f: f }

      .form-actions
        = f.submit 'Save'
