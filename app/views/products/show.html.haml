.row
  .span6
    %h1= product.name

    = image_tag(product.image_url)

    %p= product.description

    %p= number_to_currency(product.price.to_f)

    - if user_is_admin?
      = link_to t('.edit', :default => t("helpers.links.edit")), edit_product_path(product), :class => 'btn'
      = link_to t('.destroy', :default => "Delete"), product, :method => "destroy", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
      

    
