= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :salt
    = f.text_field :salt
  .field
    = f.label :crypted_password
    = f.text_field :crypted_password
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :admin
    = f.check_box :admin
  .actions
    = f.submit 'Save'
