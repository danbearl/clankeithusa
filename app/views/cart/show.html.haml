.row
  .span12
    %h1 Cart

- if session[:cart] != nil
  .row
    .span12
      %table.table
        %tr
          %th Name
          %th Size
          %th Color
          %th Price
          %th Quantity
          %th Subtotal

          - session[:cart].each_with_index do |item, i|
            .span12
              %tr
                %td
                  = item[:name]
                %td
                  - if item[:size] != nil
                    = item[:size]
                  - else
                    \-
                %td
                  - if item[:color] != nil
                    = item[:color]
                  - else
                    \-
                %td
                  = number_to_currency item[:price]
                %td
                  = item[:quantity]
                %td
                  = number_to_currency(item[:price].to_f * item[:quantity].to_f)
                %td
                  = form_tag action: :remove_item do
                    = hidden_field_tag :index, i
                    = submit_tag "Remove"

  .row
    .span3
      %p
        Order Subtotal:
        = number_to_currency subtotal
      %p
        Shipping:
        = number_to_currency shipping

      %p
        Total:
        = number_to_currency subtotal + shipping

  .row
    .span12
      = form_tag action: :empty_cart do
        = submit_tag "Empty Cart"
- else
  %p Cart Empty!
