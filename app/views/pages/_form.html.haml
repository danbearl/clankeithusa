= f.hidden_field :parent_id, value: params[:parent_id]
.control-group
  = f.label :name
  .controls
    = f.text_field :name
.control-group
  = f.label :slug
  .controls
    = f.text_field :slug
.control-group
  = f.label :body
  .controls
    = f.text_area :body, class: "input-xxlarge"
.control-group
  = f.label :public
  .controls
    = f.check_box :public
.control-group
  = f.label :parent_id
  .controls
    - @pages_array = Page.all.map {|page| [page.name, page.id]}
    - @pages_array << ["None", nil]
    = f.select(:parent_id, options_for_select(@pages_array, page.parent_id))
.form-actions
  = f.submit nil, :class => 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), pages_path, :class => 'btn'
