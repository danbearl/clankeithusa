- model_class = Page
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = page.name
%p
  %strong= model_class.human_attribute_name(:slug) + ':'
  %br
  = page.slug
%p
  %strong= model_class.human_attribute_name(:body) + ':'
  %br
  = page.body
%p
  %strong= model_class.human_attribute_name(:id) + ':'
  %br
  = page.id
%p
  %strong= model_class.human_attribute_name(:parent_id) + ':'
  %br
  = page.parent_id

.form-actions
  = link_to t('.new', :default => t("helpers.links.new")), new_page_path(:parent_id => page.id), :class => 'btn btn-primary'
  = link_to t('.back', :default => t("helpers.links.back")), pages_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_slug_path(page.slug), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), slug_path(page.slug), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
